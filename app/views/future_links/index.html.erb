<h1>Listing future_links</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @future_links.each do |future_link| %>
      <tr>
        <td><%= future_link.name %></td>
        <td><%= future_link.link %></td>
        <td><%= future_link.description %></td>
        <td><%= link_to 'Show', future_link %></td>
        <td><%= link_to 'Edit', edit_future_link_path(future_link) %></td>
        <td><%= link_to 'Destroy', future_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= form_tag({:controller => "future_links" , :action => "new"} , {:method => :get, id: "add-update-form"}) do %>
 <div class='boxed_table'>
  <table>
 	<tr>
 		<td>
 			Add or Update Link:
 		</td>
		<td>
 			<%= text_field_tag :new_link, 
 							params[:new_link], 
 							placeholder: "New Link to Add", 
 							:autocomplete => :off %>
		</td>
		<td>
			<%= submit_tag "Add or Update", :name => 'add_or_update_link' %>
		</td>
 	</tr>
  </table>
</div>
<%end%>
 							
<%= link_to 'New Future link', new_future_link_path %>
